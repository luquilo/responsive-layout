{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  // "extends": "standard", turning off eslint for a while
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-restricted-globals": 0,
    "linebreak-style": 0,
    "@typescript-eslint/no-inferrable-types": "off"
  }
}
